<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="splash"
            type="com.lvshou.cloudreaadercopy.ui.SplashEntity"/>
        
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.lvshou.cloudreaadercopy.ui.SplashActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:splash_iv_pic="@{splash.ivPic}"
            android:scaleType="fitXY" />


        <TextView
            android:id="@+id/tv_jump"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape_jump"
            android:gravity="center"
            android:text="跳过"
            android:onClick="@{splash::toMain}"
            android:textColor="#fff"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/iv_default"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/img_transition_default"
            android:scaleType="fitXY" />

    </android.support.constraint.ConstraintLayout>
</layout>
